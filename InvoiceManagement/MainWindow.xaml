<Window x:Class="InvoiceManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFE28989">
    <Grid>
        <Menu x:Name="MenuMain" HorizontalAlignment="Center" Height="262" Margin="0" VerticalAlignment="Center" Width="185" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" BorderBrush="#FF76B5E0" BorderThickness="3" Foreground="Black">
            <Menu.Background>
                <SolidColorBrush Color="#FF1CC5FF" Opacity="0.75"/>
            </Menu.Background>
            <MenuItem x:Name="ItemNewDocument" Header="Neue Rechnung" RenderTransformOrigin="1.48,0.46" HorizontalAlignment="Center" VerticalAlignment="Center" Width="175" Height="60" Foreground="#FF77E896" FontFamily="Roboto" FontSize="22" BorderThickness="1" Click="ItemNewDocument_Click"/>
            <MenuItem x:Name="ItemArchive" Header="Archiv" VerticalContentAlignment="Center" Padding="6,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="175" Height="60" Foreground="#FF77E896" FontFamily="Roboto" FontSize="22" BorderThickness="1"/>
        </Menu>

    </Grid>
</Window>
